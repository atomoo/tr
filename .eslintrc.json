{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "brace-style": ["error", "stroustrup"],
        "indent": ["error", 4],
        "prefer-destructuring": ["error", {
            "array": false,
            "object": true
        }],
        "semi": ["error", "never"]
    }
}
